@model IEnumerable<WebHW.Models.DiarySQL>

@{
    ViewBag.Title = "匿名心情分享平台首頁";
}

<h2 class="text-center mb-4 " style=" font-size: 32px; font-weight: bold;">希望有人能聽見你的聲音!祝順利^^</h2>
<style>
    .card-hover {
        transition: transform 0.5s;
    }

    .card-hover:hover {
            transform: scale(1.03);
     }

    a {
        text-decoration: none;
    }

    .profile-img {
        object-fit: cover;
    }
</style>
<div class="d-flex justify-content-end">
    <div>
        <p>
            <a href="@Url.Action("Create")" class="btn btn-outline-success">上傳文章</a>
        </p>
    </div>
</div>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {

            <div class="col-sm-4">
                <a href="@Url.Action("Details", new { id = item.Id })">
                    <div class="card card-hover mb-3">
                        <img src="https://picsum.photos/405/200?random=1" class="rounded-2 profile-img" />
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="card-title mb-0 text-black" style="width: 70%;">@item.Title</h5>
                                <small class="text-muted" style="width: 30%; text-align: right;">@item.Time.ToString("yyyy/MM/dd HH:mm")</small>
                            </div>
                            <p class="card-text text-black">@Html.Raw(item.Content.Length > 65 ? item.Content.Substring(0, 65) + "..." : item.Content)</p>
                        </div>

                        <div class="card-footer">
                            <div class="d-flex justify-content-between align-items-center" style="margin-left:80px;">
                                <div>
                                    <a href="@Url.Action("Edit", new { id = item.Id })" class="card-link mr-2 btn btn-primary">編輯</a>
                                    <a href="@Url.Action("Delete", new { id = item.Id })" class="card-link btn btn-danger">刪除</a>
                                </div>
                                <div class="d-flex align-items-center ml-auto">
                                    <small class="text-body mr-3" style="margin-right: 10px">Author:@item.User</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
