@model WebHW.Models.DiarySQL

@{
    ViewBag.Title = Model.Title;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center mb-4 " style=" font-size: 32px; font-weight: bold;">@ViewBag.Title</h2>
            <div class="card">
                <img src="https://picsum.photos/1292/400?random=1" class="card-img-top" />
                <div class="card-body">
                    <div class="mb-3">
                        <span class="fw-bold me-2">作者：</span>
                        @Html.DisplayFor(model => model.User)
                    </div>
                    <div class="mb-3">
                        <span class="fw-bold me-2">時間：</span>
                        @Html.DisplayFor(model => model.Time)
                    </div>
                    <div class="mb-3">
                        <span class="fw-bold me-2">內容：</span>
                        @Html.DisplayFor(model => model.Content)
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-end">
                        @Html.ActionLink("回到日記首頁", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card-img-top {
        object-fit: cover;
        height: 400px;
    }
</style>